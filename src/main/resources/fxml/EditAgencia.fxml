<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<VBox spacing="15.0" prefWidth="450.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.dbank.controller.EditAgenciaController">
    <padding>
        <Insets top="25.0" right="25.0" bottom="25.0" left="25.0" />
    </padding>
    <children>
        <Label fx:id="lblTitulo" text="Gerenciar Agência" style="-fx-text-fill: #2c3e50;">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
            <VBox.margin>
                <Insets bottom="10.0" />
            </VBox.margin>
        </Label>

        <VBox spacing="5.0">
            <Label text="Nome da Unidade:" />
            <TextField fx:id="txtNome" prefHeight="35.0" promptText="Ex: Agência Central" style="-fx-border-color: #dcdde1; -fx-border-radius: 5;" />
        </VBox>

        <VBox spacing="5.0">
            <Label text="Endereço Completo:" />
            <TextField fx:id="txtEndereco" prefHeight="35.0" promptText="Rua, Número, Bairro" style="-fx-border-color: #dcdde1; -fx-border-radius: 5;" />
        </VBox>

        <HBox spacing="15.0" alignment="CENTER_RIGHT">
            <padding>
                <Insets top="10.0" />
            </padding>
            <children>
                <Button text="Cancelar" onAction="#handleCancelar" prefHeight="35.0" prefWidth="100.0"
                        style="-fx-background-radius: 5;" />
                <Button text="Salvar Agência" onAction="#handleSalvar" prefHeight="35.0" prefWidth="150.0"
                        style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" />
            </children>
        </HBox>
    </children>
</VBox>