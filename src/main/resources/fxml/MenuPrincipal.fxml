<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<HBox prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.dbank.controller.MenuController">
    <children>
        <VBox alignment="TOP_CENTER" prefWidth="220.0" spacing="20.0" style="-fx-background-color: #263238;">
            <padding><Insets top="40" /></padding>
            <children>
                <Label text="DBank" textFill="WHITE">
                    <font><Font name="System Bold" size="28.0" /></font>
                </Label>

                <Label fx:id="lblNumeroConta" text="Conta: 000" textFill="#b0bec5">
                    <font><Font size="14.0" /></font>
                </Label>

                <Separator opacity="0.2" maxWidth="180.0" />

                <Button onAction="#Deposito" prefWidth="180.0" text="Depositar" style="-fx-cursor: hand;" />
                <Button onAction="#Saque" prefWidth="180.0" text="Sacar" style="-fx-cursor: hand;" />
                <Button onAction="#Transferir" prefWidth="180.0" text="Transferir" style="-fx-cursor: hand;" />
                <Button onAction="#AbrirExtrato" prefWidth="180.0" text="Ver Extrato" style="-fx-cursor: hand;" />

                <Separator opacity="0.2" maxWidth="180.0" />

                <Button onAction="#Sair" prefWidth="180.0" text="Sair" style="-fx-background-color: #1ebdd9; -fx-text-fill: white;" />
            </children>
        </VBox>

        <VBox alignment="CENTER" spacing="30.0" HBox.hgrow="ALWAYS" style="-fx-background-color: #f5f5f5;">
            <children>
                <VBox alignment="CENTER" maxWidth="400.0" prefHeight="150.0" style="-fx-background-color: white; -fx-background-radius: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);">
                    <children>
                        <Label text="Saldo Disponível" textFill="#757575" />
                        <Label fx:id="lblSaldo" text="R$ 0,00" textFill="#2e7d32">
                            <font><Font name="System Bold" size="42.0" /></font>
                        </Label>
                    </children>
                </VBox>

                <Label fx:id="lblBemVindo" text="Olá, Usuário!">
                    <font><Font size="18.0" /></font>
                </Label>
            </children>
        </VBox>
    </children>
</HBox>