<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="450.0" prefWidth="350.0" spacing="15.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.dbank.controller.LoginController">
   <children>
      <ImageView fitHeight="184.0" fitWidth="173.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../img/dbank png (1).png" />
         </image>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </ImageView>

      <TextField fx:id="txtNumeroConta" maxWidth="200.0" promptText="Número da Conta" />
      <PasswordField fx:id="txtSenha" maxWidth="200.0" promptText="Senha" />

      <Button mnemonicParsing="false" onAction="#Login" prefWidth="100.0" style="-fx-background-color: #2196F3; -fx-text-fill: white;" text="Entrar">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Button>

      <Hyperlink onAction="#AbrirCadastro" text="Não tem uma conta? Cadastre-se aqui" />
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
